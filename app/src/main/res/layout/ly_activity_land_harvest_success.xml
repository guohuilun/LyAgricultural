<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ly_activity_bg"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y50"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/iv_default"
            android:layout_width="@dimen/x43"
            android:layout_height="@dimen/y24"
            android:src="@drawable/ly_land_successful_operation"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            />

        <TextView
            android:id="@+id/tv_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="操作成功"
            android:textColor="@color/ly_activity_tx_color"
            android:textSize="@dimen/sp_16"
            android:layout_below="@+id/iv_default"
            android:layout_centerHorizontal="true"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_below="@+id/tv_default"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <Button
                android:id="@+id/land_harvest_success_back_button"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/y5"
                android:background="@drawable/ly_activity_land_name_button"
                android:text="返回首页"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:layout_marginRight="@dimen/dp_24"
                />


            <Button
                android:id="@+id/land_harvest_success_seed_out_button"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/y5"
                android:background="@drawable/ly_activity_land_name_button"
                android:text="查看配送"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_24"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/ly_activity_tv_color"
                android:text="独乐乐不如众乐乐"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/ly_activity_account_order_tv_color"
                android:text="您也可以分享给好友，和好友一起享受休闲种菜乐趣！"

                />
        </LinearLayout>



    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/segmenting_line"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        ></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/land_harvest_success_qq_ll"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ly_land_qq"
                android:layout_marginTop="@dimen/dp_10"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ好友"
                android:textColor="@color/ly_activity_tx_color"
                android:textSize="@dimen/sp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_10"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/land_harvest_success_wei_xin_ll"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ly_land_wei_xin"
                android:layout_marginTop="@dimen/dp_10"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信好友"
                android:textColor="@color/ly_activity_tx_color"
                android:textSize="@dimen/sp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_10"
                />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/land_harvest_success_wei_xin_circle_ll"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ly_land_wei_xin_circle"
                android:layout_marginTop="@dimen/dp_10"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信朋友圈"
                android:textColor="@color/ly_activity_tx_color"
                android:textSize="@dimen/sp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_10"
                />


        </LinearLayout>



    </LinearLayout>



</LinearLayout>