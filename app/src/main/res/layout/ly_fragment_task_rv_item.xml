<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y24"
        android:orientation="vertical"
        android:background="@color/white"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y5"
            android:background="@color/ly_fragment_task_rv_item_bg"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/task_rv_item_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="A-01-张先生"
                    android:textSize="@dimen/sp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    />

                <TextView
                    android:id="@+id/task_rv_item_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="类型：种植"
                    android:textSize="@dimen/sp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    />

            </LinearLayout>



            <TextView
                android:id="@+id/task_rv_item_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="时间：2018/8/5 09:15:24"
                android:textSize="@dimen/sp_10"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/task_rv_item_rv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y5">
        </android.support.v7.widget.RecyclerView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/segmenting_line"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            ></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y8"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/ly_activity_tv_color"
                android:text="状态：待接受"
                android:layout_marginLeft="@dimen/dp_10"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/ce_seed_v_name_banner_t"
                android:scaleType="fitXY"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_5"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/segmenting_line"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            ></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/task_rv_item_bt"
                android:layout_width="@dimen/x37"
                android:layout_height="@dimen/y4"
                android:text="种植"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:background="@drawable/ly_activity_land_name_button"
                android:textSize="@dimen/sp_12"
                />

            <LinearLayout
                android:id="@+id/task_rv_item_care_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/task_rv_item_bt"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_8"

                >

                <ImageView
                    android:layout_width="@dimen/x3"
                    android:layout_height="@dimen/y2"
                    android:src="@mipmap/ce_seed_v_name_banner_t"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有备注，请查看！"
                    android:textSize="@dimen/sp_8"
                    android:textColor="@color/ly_activity_tv_color"
                    android:layout_marginLeft="@dimen/dp_3"
                    />

            </LinearLayout>




        </RelativeLayout>



        
    </LinearLayout>

</LinearLayout>