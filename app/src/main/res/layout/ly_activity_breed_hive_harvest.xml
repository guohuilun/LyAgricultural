<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ly_activity_bg"
    >


    <RelativeLayout
        android:id="@+id/breed_hive_harvest_address_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y14"
        android:background="@color/white"
        >


        <ImageView
            android:id="@+id/iv_default"
            android:layout_width="@dimen/x7"
            android:layout_height="@dimen/y3"
            android:src="@drawable/ly_activity_land_harvest_address"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_centerVertical="true"
            />

        <LinearLayout
            android:id="@+id/breed_hive_harvest_content_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/iv_default"
            android:layout_toLeftOf="@+id/breed_hive_harvest_add_tv"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/dp_10"
            android:visibility="gone"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dp_10"
                >

                <TextView
                    android:id="@+id/breed_hive_harvest_content_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货人：张三"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/ly_activity_tv_color"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/breed_hive_harvest_content_phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13666824480"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/ly_activity_tv_color"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/dp_10"
                >

                <TextView
                    android:id="@+id/breed_hive_harvest_content_address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货地址：重庆市合川区江阳大道飞科工业园5栋2单元5-3"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/ly_activity_tv_color"
                    android:layout_centerVertical="true"
                    />



            </RelativeLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/breed_hive_harvest_add_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新建地址"
            android:layout_toLeftOf="@+id/breed_hive_harvest_back_iv"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/breed_hive_harvest_back_iv"
            android:layout_width="@dimen/x3"
            android:layout_height="@dimen/y2"
            android:src="@drawable/ly_activity_land_harvest_back"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />



    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:scaleType="fitXY"
        android:src="@drawable/ly_activity_land_harvest_line"
        >
    </ImageView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/breed_hive_harvest_rv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        >

    </android.support.v7.widget.RecyclerView>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y23"
        android:scaleType="fitXY"
        android:src="@drawable/ly_land_details_dialogfragment_bg"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_8"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总量:"
                android:textColor="@color/ly_activity_tv_color"
                android:textSize="@dimen/sp_14"
                />

            <TextView
                android:id="@+id/breed_hive_harvest_all_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/ly_activity_seed_plant_remind_tv_color"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_5"
                />

        </LinearLayout>


        <Button
            android:id="@+id/breed_hive_harvest_confirm_button"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/y6"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:text="确认收获"
            android:textSize="@dimen/sp_16"
            android:background="@drawable/ly_activity_land_name_button"
            android:textColor="@color/white"
            />

    </RelativeLayout>


</LinearLayout>