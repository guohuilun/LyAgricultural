<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/y4"
    android:background="@color/white"
    android:id="@+id/seed_plant_rv_item_rl"
    >

        <TextView
            android:id="@+id/seed_plant_rv_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/ly_activity_tv_color"
            android:textSize="@dimen/sp_12"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/seed_plant_rv_item_money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ly_activity_tx_color"
                android:text=""
                android:textSize="@dimen/sp_12"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_centerVertical="true"
                />

            <ImageView
                android:id="@+id/iv_default"
                android:layout_width="30px"
                android:layout_height="30px"
                android:src="@drawable/ly_frgment_shop_currency"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/seed_plant_rv_item_money_tv"
                android:layout_marginLeft="@dimen/dp_3"
                />

        </RelativeLayout>


        <View
            android:id="@+id/seed_plant_rv_item_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.7"
            android:background="@color/segmenting_line"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            ></View>



</RelativeLayout>