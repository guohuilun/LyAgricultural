<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/or_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y6"
        android:layout_margin="@dimen/dp_5"
        >

        <TextView
            android:id="@+id/or_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类型：浇水"
            android:textColor="@color/ly_activity_tv_color"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="土地：A-01-张先生"
            android:textColor="@color/ly_activity_tv_color"
            android:textSize="@dimen/sp_12"
            android:layout_toRightOf="@+id/or_type_tv"
            android:layout_toLeftOf="@+id/or_time_tv"
            android:layout_centerVertical="true"
            android:gravity="center"
            />


        <TextView
            android:id="@+id/or_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-8-27 17:17:44"
            android:textColor="@color/ly_activity_tv_color"
            android:textSize="@dimen/sp_12"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            />


    </RelativeLayout>


</LinearLayout>