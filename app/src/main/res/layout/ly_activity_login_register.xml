<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ly_activity_bg"
    >

    <RelativeLayout
        android:id="@+id/register_weixin_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y8"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_10"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信注册"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/ly_activity_tv_color"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            />

        <LinearLayout
            android:layout_width="@dimen/x20"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ly_activity_login_register_weixin"
                android:layout_marginRight="@dimen/dp_10"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ly_account_back"
                />



        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/register_phone_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y8"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_10"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机注册"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/ly_activity_tv_color"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            />

        <LinearLayout
            android:layout_width="@dimen/x20"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ly_activity_login_register_phone"
                android:layout_marginRight="@dimen/dp_10"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ly_account_back"
                />



        </LinearLayout>

    </RelativeLayout>

</LinearLayout>