<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y13"
        android:background="@drawable/ly_activity_login_button_bg"
        android:layout_marginTop="@dimen/dp_8"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y3"
            android:gravity="center_vertical"
            >


            <TextView
                android:id="@+id/breed_hive_history_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-6-12 10:25:43"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/ly_activity_tv_color"
                android:layout_marginLeft="@dimen/dp_10"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/segmenting_line"
            ></View>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:text="温度"
                    android:textColor="@color/ly_activity_tv_color"
                    android:textSize="@dimen/sp_12"
                    android:gravity="center"
                    />


                <TextView
                    android:id="@+id/breed_hive_history_temperature_tv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:text="35℃"
                    android:textColor="@color/ly_activity_tx_color"
                    android:textSize="@dimen/sp_12"
                    android:gravity="center"
                    />




            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:text="湿度"
                    android:textColor="@color/ly_activity_tv_color"
                    android:textSize="@dimen/sp_12"
                    android:gravity="center"
                    />


                <TextView
                    android:id="@+id/breed_hive_history_humidity_tv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:text="70%"
                    android:textColor="@color/ly_activity_tx_color"
                    android:textSize="@dimen/sp_12"
                    android:gravity="center"
                    />




            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:text="重量"
                    android:textColor="@color/ly_activity_tv_color"
                    android:textSize="@dimen/sp_12"
                    android:gravity="center"
                    />


                <TextView
                    android:id="@+id/breed_hive_history_weight_tv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:text="9.5kg"
                    android:textColor="@color/ly_activity_tx_color"
                    android:textSize="@dimen/sp_12"
                    android:gravity="center"
                    />




            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:text="进/出蜜蜂"
                    android:textColor="@color/ly_activity_tv_color"
                    android:textSize="@dimen/sp_12"
                    android:gravity="center"
                    />


                <TextView
                    android:id="@+id/breed_hive_history_fly_out_in_tv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    android:text="500/400"
                    android:textColor="@color/ly_activity_tx_color"
                    android:textSize="@dimen/sp_12"
                    android:gravity="center"
                    />




            </LinearLayout>


        </LinearLayout>


    </LinearLayout>



</LinearLayout>