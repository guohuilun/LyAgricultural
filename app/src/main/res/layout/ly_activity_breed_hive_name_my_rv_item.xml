<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/x16"
    android:layout_height="@dimen/y9"
    >

    <RelativeLayout
        android:layout_width="@dimen/x16"
        android:layout_height="@dimen/y9"
        >
        <TextView
            android:id="@+id/contentTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温度"
            android:textColor="@color/ly_activity_tv_color"
            android:textSize="@dimen/sp_8"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_6"
            />

        <ImageView
            android:id="@+id/iv_default"
            android:layout_width="@dimen/x3"
            android:layout_height="@dimen/y4"
            android:src="@mipmap/ce_breed_temperature"
            android:scaleType="fitXY"
            android:layout_toRightOf="@+id/contentTv"
            android:layout_marginLeft="@dimen/dp_10"
            />

        <TextView
            android:id="@+id/breed_hive_name_my_temperature_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45580"
            android:textColor="@color/ly_activity_tv_color"
            android:textSize="@dimen/sp_14"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_10"
            />




    </RelativeLayout>


</LinearLayout>