<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/cornersLinearLayout"
        android:layout_width="@dimen/x21"
        android:layout_height="@dimen/y12"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1.5"
            >
            <ImageView
                android:id="@+id/iv_default"
                android:layout_width="@dimen/x4"
                android:layout_height="@dimen/y3"
                android:src="@mipmap/ce_breed_temperature"
                android:scaleType="fitXY"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_6"
                />

            <TextView
                android:id="@+id/contentTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="温度"
                android:textColor="@color/ly_activity_tv_color"
                android:textSize="@dimen/sp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/iv_default"
                />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="2.5"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="开"
                android:textSize="@dimen/sp_8"
                android:gravity="center"
                />

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ce_breed_temperature"
                        android:layout_centerInParent="true"
                        />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ce_breed_fly_in"
                        android:layout_centerInParent="true"
                        />

                </RelativeLayout>


            </LinearLayout>



        </LinearLayout>

    </LinearLayout>


</LinearLayout>