<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/pi_rv_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y6"
        >

        <TextView
            android:id="@+id/pi_rv_item_name_tv"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            android:textSize="@dimen/sp_12"
            android:textColor="@color/ly_activity_tv_color"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_16"
            />
        <TextView
            android:id="@+id/pi_rv_item_time_tv"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text=""
            android:textSize="@dimen/sp_12"
            android:textColor="@color/ly_activity_tv_color"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_16"
            />

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/pi_rv_item_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/ly_activity_tv_color"
                android:layout_marginRight="@dimen/dp_10"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ly_account_back"
                />


        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/segmenting_line"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        ></View>


</LinearLayout>