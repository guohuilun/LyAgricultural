<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ly_fragment_shop_seed_fl"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <com.youth.banner.Banner
            android:id="@+id/shop_seed_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y14"
            android:layout_margin="@dimen/dp_10"
            app:indicator_width="8dp"
            app:indicator_height="8dp"
            app:indicator_drawable_selected="@mipmap/banner_select"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/shop_seed_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_10"
            >
        </android.support.v7.widget.RecyclerView>


    </LinearLayout>


   <RelativeLayout
       android:id="@+id/shop_seed_rl"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_gravity="center"
       >


       <RelativeLayout
           android:id="@+id/shop_seed_touch_rl"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <ImageView
               android:id="@+id/shop_seed_iv"
               android:layout_width="@dimen/x20"
               android:layout_height="@dimen/y12"
               android:src="@mipmap/ly_fragment_shop_seed_package"
               android:scaleType="fitXY"
               />

           <TextView
               android:id="@+id/shop_seed_number_tv"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/ly_fragment_shop_seed_small_circle"
               android:textSize="@dimen/sp_8"
               android:textColor="#FFFFFF"
               android:layout_alignRight="@+id/shop_seed_iv"
               android:visibility="gone"
               />


       </RelativeLayout>




   </RelativeLayout>



</FrameLayout>