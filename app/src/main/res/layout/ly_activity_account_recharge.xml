<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ly_activity_bg"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y16"
        android:background="@color/ly_activity_tx_color"
        >

        <TextView
            android:layout_width="@dimen/x61"
            android:layout_height="@dimen/y6"
            android:text="充值可获得货币（1元=10货币） 充值的货币用于商店消费"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:layout_centerInParent="true"
            android:gravity="center"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y6"
        android:background="@color/white"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="请选择充值金额"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/ly_activity_tv_color"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.7"
        android:background="@color/segmenting_line"
        ></View>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/account_recharge_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        ></android.support.v7.widget.RecyclerView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y6"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_10"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="请选择充值方式"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/ly_activity_tv_color"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.7"
        android:background="@color/segmenting_line"
        ></View>

    <RelativeLayout
        android:id="@+id/account_recharge_mode_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y6"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/iv_default"
            android:layout_width="@dimen/x8"
            android:layout_height="@dimen/y4"
            android:src="@mipmap/ly_frgment_shop_currency"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_8"
            android:text="微信支付"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/ly_activity_tv_color"
            android:layout_toRightOf="@+id/iv_default"
            />

        <CheckBox
            android:id="@+id/account_recharge_mode_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SmallCircleTheme"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:clickable="false"
            android:enabled="false"
            />

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_16"
        >
        <Button
            android:id="@+id/account_recharge_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y8"
            android:background="@drawable/ly_activity_land_name_button"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:textColor="@color/white"
            android:text="确认充值"
            android:textSize="@dimen/sp_20"
            android:layout_centerVertical="true"
            />


    </RelativeLayout>






</LinearLayout>