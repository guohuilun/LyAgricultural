<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="@dimen/x15"
    android:layout_height="@dimen/y15">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y8"
        android:src="@mipmap/ce_ly_land_t"
        android:layout_marginTop="@dimen/dp_10"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >

        <CheckBox
            android:layout_width="@dimen/x3"
            android:layout_height="@dimen/y2"
            style="@style/SmallCircleTheme"
            android:visibility="gone"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="普通肥料"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/ly_activity_tv_color"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/shop_props_rv_money_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/ly_activity_tx_color"
                    android:text="100"
                    android:textSize="@dimen/sp_8"
                    android:gravity="center"
                    />

                <ImageView
                    android:layout_width="@dimen/x2"
                    android:layout_height="@dimen/y2"
                    android:src="@drawable/ly_frgment_shop_currency"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/ly_activity_tx_color"
                    android:text="/次"
                    android:textSize="@dimen/sp_8"
                    android:gravity="center"
                    />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>