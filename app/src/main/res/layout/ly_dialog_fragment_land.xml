<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y43"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_32"
        android:background="@drawable/ly_activity_account_order_rv_item_bg"
        >


        <LinearLayout
            android:id="@+id/dialog_fragment_hand_cancel_ll"
            android:layout_width="@dimen/x16"
            android:layout_height="@dimen/y4"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_gravity="right"
            >


            <ImageView
                android:layout_width="@dimen/x2"
                android:layout_height="@dimen/y2"
                android:src="@drawable/ly_land_cancel"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关闭"
                android:layout_marginLeft="@dimen/dp_8"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/segmenting_line"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            ></View>

        <LinearLayout
            android:id="@+id/dialog_fragment_hand_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="@dimen/x20"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/dp_3"
                android:layout_marginTop="@dimen/dp_3"
                >

                <ImageView
                    android:id="@+id/dialog_fragment_hand_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:id="@+id/dialog_fragment_hand_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="番茄(10)"
                    android:textColor="@color/ly_activity_tv_color"
                    android:textSize="@dimen/sp_10"
                    android:layout_marginTop="@dimen/dp_3"
                    />

                <com.lyagricultural.view.AmountView
                    android:id="@+id/dialog_fragment_land_av"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y2"
                    app:btnTextSize="@dimen/sp_6"
                    app:btnWidth="@dimen/x4"
                    app:tvWidth="@dimen/x9"
                    >


                </com.lyagricultural.view.AmountView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:background="@color/segmenting_line"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:visibility="gone"
                ></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y15"
                android:visibility="gone"
                >

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/dialog_fragment_hand_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    ></android.support.v7.widget.RecyclerView>


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y22"
                android:src="@drawable/ly_land_details_dialogfragment_bg"
                android:scaleType="fitXY"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:background="@color/segmenting_line"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                ></View>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y6"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="消费"
                        android:textSize="@dimen/sp_10"
                        android:textColor="@color/ly_activity_tv_color"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_8"
                        />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        >
                        <TextView
                            android:id="@+id/dialog_fragment_hand_money_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/ly_activity_tx_color"
                            android:text="8000"
                            android:textSize="@dimen/sp_10"
                            />

                        <ImageView
                            android:layout_width="30px"
                            android:layout_height="30px"
                            android:src="@drawable/ly_frgment_shop_currency"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/dialog_fragment_hand_money_tv"
                            android:layout_marginLeft="@dimen/dp_3"
                            />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的货币"
                        android:textSize="@dimen/sp_10"
                        android:textColor="@color/ly_activity_tv_color"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_8"
                        />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        >
                        <TextView
                            android:id="@+id/dialog_fragment_hand_money_o_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/ly_activity_tx_color"
                            android:text="8000"
                            android:textSize="@dimen/sp_10"
                            />

                        <ImageView
                            android:layout_width="30px"
                            android:layout_height="30px"
                            android:src="@drawable/ly_frgment_shop_currency"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/dialog_fragment_hand_money_o_tv"
                            android:layout_marginLeft="@dimen/dp_3"
                            />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/dialog_fragment_hand_balance_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:visibility="gone"
                        >

                        <ImageView
                            android:layout_width="@dimen/x4"
                            android:layout_height="@dimen/y2"
                            android:src="@drawable/ly_activity_land_leased_place_order_exclamatory_mark"
                            />

                        <TextView
                            android:id="@+id/dialog_fragment_hand_buy_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_12"
                            android:text="货币不足，请充值"
                            android:textColor="@color/ly_activity_tv_color"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:layout_marginRight="@dimen/dp_8"
                            />


                    </LinearLayout>



                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:background="@color/segmenting_line"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:visibility="gone"
                ></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                >

                <Button
                    android:id="@+id/dialog_fragment_hand_button"
                    android:layout_width="@dimen/x53"
                    android:layout_height="@dimen/y4"
                    android:text="确认收获"
                    android:textColor="@color/white"
                    android:background="@drawable/ly_activity_land_name_button"
                    />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_fragment_hand_content_success"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y29"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/iv_default"
                    android:layout_width="@dimen/x26"
                    android:layout_height="@dimen/y17"
                    android:src="@drawable/ly_land_successful_operation"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="操作成功"
                    android:textColor="@color/ly_activity_tx_color"
                    android:textSize="@dimen/sp_12"
                    android:layout_below="@+id/iv_default"
                    android:layout_centerHorizontal="true"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_8"
                        android:textColor="@color/ly_activity_tv_color"
                        android:text="独乐乐不如众乐乐"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_8"
                        android:textColor="@color/ly_activity_account_order_tv_color"
                        android:text="您也可以分享给好友，和好友一起享受休闲种菜乐趣！"

                        />
                </LinearLayout>



            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:background="@color/segmenting_line"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                ></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:id="@+id/dialog_fragment_hand_qq_ll"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ly_land_qq"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QQ好友"
                        android:textColor="@color/ly_activity_tx_color"
                        android:textSize="@dimen/sp_8"
                        android:layout_marginTop="@dimen/dp_8"
                        />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dialog_fragment_hand_wei_xin_ll"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ly_land_wei_xin"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微信好友"
                        android:textColor="@color/ly_activity_tx_color"
                        android:textSize="@dimen/sp_8"
                        android:layout_marginTop="@dimen/dp_8"
                        />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/dialog_fragment_hand_wei_xin_circle_ll"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ly_land_wei_xin_circle"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微信朋友圈"
                        android:textColor="@color/ly_activity_tx_color"
                        android:textSize="@dimen/sp_8"
                        android:layout_marginTop="@dimen/dp_8"
                        />


                </LinearLayout>



            </LinearLayout>



        </LinearLayout>


    </LinearLayout>



</RelativeLayout>