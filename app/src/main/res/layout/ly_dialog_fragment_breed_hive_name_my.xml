<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y32"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/dp_16"
        android:background="@drawable/ly_activity_account_order_rv_item_bg"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:gravity="center"
            android:layout_above="@+id/startButton"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y11">

                <ImageView
                    android:id="@+id/cancel_iv"
                    android:layout_width="@dimen/x5"
                    android:layout_height="@dimen/y3"
                    android:src="@drawable/ly_land_cancel"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/dp_10"
                    />


                <ImageView
                    android:layout_width="@dimen/x16"
                    android:layout_height="@dimen/y9"
                    android:src="@mipmap/ce_breed_fly_in"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是否开启托管功能"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black"
                />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:text="无需手动调节温/湿度，管理员帮您自动管理！"
                 android:textSize="@dimen/sp_14"
                 android:textColor="@color/black"
                 android:gravity="center"
                 />


        </LinearLayout>

        <Button
            android:id="@+id/startButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y7"
            android:background="@drawable/ly_activity_land_name_button"
            android:text="开启托管"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            />



    </RelativeLayout>


</RelativeLayout>