<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y10"
        android:background="@drawable/ly_activity_login_button_bg"
        android:layout_marginTop="@dimen/dp_5"
        >

        <TextView
            android:id="@+id/breed_hive_harvest_rv_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="蜂蜜(10)"
            android:textColor="@color/ly_activity_tv_color"
            android:textSize="@dimen/sp_12"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_8"

            />


        <com.lyagricultural.view.amount.AmountView
            android:id="@+id/breed_hive_harvest_av"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y3"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_centerVertical="true"
            app:btnTextSize="@dimen/sp_12"
            app:btnWidth="@dimen/x6"
            app:tvWidth="@dimen/x8">
        </com.lyagricultural.view.amount.AmountView>


    </RelativeLayout>


</LinearLayout>