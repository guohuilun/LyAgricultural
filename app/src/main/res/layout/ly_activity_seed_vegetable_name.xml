<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/seed_vegetable_name_rl"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_rl"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <com.youth.banner.Banner
                android:id="@+id/seed_vegetable_name_banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y24"
                android:layout_margin="@dimen/dp_5"
                app:indicator_width="8dp"
                app:indicator_height="8dp"
                app:indicator_drawable_selected="@drawable/banner_select"
                >
            </com.youth.banner.Banner>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y4"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_10"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="蔬菜简介"
                    android:textColor="@color/ly_activity_tx_color"
                    android:textSize="@dimen/sp_12"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                >

                <TextView
                    android:id="@+id/seed_vegetable_name_introduce_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="番茄，即西红柿（学名：Lycopersicon esculentum Mill.），是茄科番茄属一年生或多年生草本植物，体高0.6-2米，全体生粘质腺毛，有强烈气味，茎易倒伏，叶羽状复叶或羽状深裂，花序总梗长2-5厘米，常3-7朵花，花萼辐状，花冠辐状，浆果扁球状或近球状，肉质而多汁液，种子黄色，花果期夏秋季。"
                    android:textColor="@color/ly_activity_tv_color"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginTop="@dimen/y1"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/y1"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y4"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_10"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="功效"
                    android:textColor="@color/ly_activity_tx_color"
                    android:textSize="@dimen/sp_12"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                >

                <TextView
                    android:id="@+id/seed_vegetable_name_effect_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生津止渴、开胃消食、防癌、降压降脂"
                    android:textColor="@color/ly_activity_tv_color"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginTop="@dimen/y1"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/y1"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y4"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_10"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="营养成分"
                    android:textColor="@color/ly_activity_tx_color"
                    android:textSize="@dimen/sp_12"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                >

                <TextView
                    android:id="@+id/seed_vegetable_name_nutrition_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="纤维素、钾元素、苹果酸、胡萝卜素、番茄红素"
                    android:textColor="@color/ly_activity_tv_color"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginTop="@dimen/y1"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/y1"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y4"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_10"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生长周期"
                    android:textColor="@color/ly_activity_tx_color"
                    android:textSize="@dimen/sp_12"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                >

                <TextView
                    android:id="@+id/seed_vegetable_name_cycle_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="110-170天"
                    android:textColor="@color/ly_activity_tv_color"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginTop="@dimen/y1"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/y1"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y4"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_10"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="占地面积"
                    android:textColor="@color/ly_activity_tx_color"
                    android:textSize="@dimen/sp_12"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                >

                <TextView
                    android:id="@+id/seed_vegetable_name_acreage_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1㎡/株"
                    android:textColor="@color/ly_activity_tv_color"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginTop="@dimen/y1"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/y1"
                    />

            </RelativeLayout>


        </LinearLayout>

    </ScrollView>


    <RelativeLayout
        android:id="@+id/bottom_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y9"
        android:layout_alignParentBottom="true"
        android:background="@color/ly_activity_tx_color"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y6"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_centerVertical="true"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数量:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    />

                <com.lyagricultural.view.amount.AmountView
                    android:id="@+id/seed_vegetable_name_all_av"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y3"
                    android:layout_centerVertical="true"
                    app:btnTextSize="@dimen/sp_12"
                    app:btnWidth="@dimen/x6"
                    app:tvWidth="@dimen/x7"
                    app:tvColor="@color/white"
                    app:btnTextColor="@color/ly_activity_tx_color"
                    android:layout_marginLeft="@dimen/dp_8"
                    >
                </com.lyagricultural.view.amount.AmountView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="占地面积:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    />

                <TextView
                    android:id="@+id/seed_vegetable_name_all_area_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginLeft="@dimen/dp_5"
                    />

            </LinearLayout>

        </LinearLayout>




        <Button
            android:id="@+id/seed_vegetable_name_add_button"
            android:layout_width="@dimen/x37"
            android:layout_height="@dimen/y6"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:text="种植"
            android:textSize="@dimen/sp_16"
            android:background="@drawable/ly_activity_login_button_bg"
            android:textColor="@color/ly_activity_tx_color"
            />

    </RelativeLayout>


</RelativeLayout>